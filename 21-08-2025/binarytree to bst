class Solution {
    private void inorder(Node root, List<Integer> values) {
        if (root == null) return;
        inorder(root.left, values);
        values.add(root.data);
        inorder(root.right, values);
    }
   
    private void arrayToBST(Node root, List<Integer> values, int[] index) {
        if (root == null) return;
        arrayToBST(root.left, values, index);
        root.data = values.get(index[0]++);
        arrayToBST(root.right, values, index);
    }
    
    Node binaryTreeToBST(Node root) {
        List<Integer> values = new ArrayList<>();
        inorder(root, values);        
        Collections.sort(values);       
        int[] index = {0};            
        arrayToBST(root, values, index); 
        return root;
    }
}
